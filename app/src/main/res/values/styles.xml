<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/font_app</item>
        <item name="android:windowDisablePreview">true</item>


    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyAlertDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">90%</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowFixedWidthMinor">90%</item>
    </style>


    <style name="FragmentThemeOne" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorPrimaryDark</item>

    </style>


    <style name="MyAlertDialogThemeFullChat" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
        <item name="windowFixedHeightMajor">70%</item>
        <item name="windowFixedHeightMinor">70%</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/app_green</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@drawable/calendar_click_text_change</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@drawable/calendar_click_text_change</item>
    </style>

    <style name="menuText" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textSize">@dimen/text_size_normal</item>

    </style>

    <style name="CustomLabelTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/nav_title_color</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:padding">@dimen/_3sdp</item>
    </style>

    <style name="CustomValueTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:textColor">@color/text_blue_color</item>
    </style>

    <style name="checkboxTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/app_blue</item>
        <item name="colorButtonNormal">@color/app_blue</item>
    </style>

    <!-- Toast Style -->
    <style name="toastTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sans_plain</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MyAlertDialogStyleWh" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorWhite</item>
    </style>
    <style name="ImagePickerTheme" parent="ef_AppTheme">
        <item name="colorPrimary">@color/turquoise</item>
        <item name="colorPrimaryDark">@color/turquoise</item>
        <item name="colorAccent">@color/turquoise</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="ef_AppTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@color/ef_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ef_colorPrimaryDark</item>
        <item name="colorAccent">@color/ef_colorAccent</item>
    </style>

    <style name="ef_BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


